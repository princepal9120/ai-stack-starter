---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero";
import TypesafeSection from "../components/TypesafeSection";
import Features from "../components/Features";
import Community from "../components/Community";
---

<Layout
  title="AI Stack - Production-ready RAG boilerplate with zero vendor lock-in"
>
  {/* Header */}
  <header
    class="fixed top-0 left-0 right-0 z-50 bg-slate-950/80 backdrop-blur-xl border-b border-slate-800"
  >
    <div class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
      <div class="flex items-center gap-8">
        <a href="/" class="flex items-center gap-2">
          <span
            class="text-xl font-bold bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent"
          >
            AI Stack
          </span>
        </a>
        <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
          <a href="/docs" class="text-slate-300 hover:text-white transition">
            Docs
          </a>
          <a
            href="/docs/quickstart"
            class="text-slate-300 hover:text-white transition"
          >
            Quick Start
          </a>
          <a
            href="https://github.com/princepal9120/ai-stack"
            class="text-slate-300 hover:text-white transition"
            target="_blank"
          >
            GitHub
          </a>
        </nav>
      </div>
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/princepal9120/ai-stack"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden md:flex items-center gap-2 text-slate-300 text-sm hover:text-white transition"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"
            ></path>
          </svg>
          <span>Star on GitHub</span>
        </a>

        <a
          href="/docs/quickstart"
          class="hidden md:flex items-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-500 text-white text-sm font-medium rounded-lg transition-colors"
        >
          Get Started
        </a>
      </div>
    </div>
  </header>

  <main class="pt-16">
    <Hero client:load />
    <TypesafeSection client:load />
    <Features client:load />
    <Community client:load />
  </main>

  {/* Footer */}
  <footer class="py-12 border-t border-slate-800">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8 mb-8">
        <div>
          <h4 class="text-white font-semibold mb-4">AI Stack</h4>
          <p class="text-slate-500 text-sm">
            Production-ready RAG boilerplate with zero vendor lock-in.
          </p>
        </div>
        <div>
          <h4 class="text-white font-semibold mb-4">Documentation</h4>
          <ul class="space-y-2 text-sm">
            <li>
              <a href="/docs" class="text-slate-400 hover:text-white transition"
                >Introduction</a>
            </li>
            <li>
              <a
                href="/docs/quickstart"
                class="text-slate-400 hover:text-white transition"
                >Quick Start</a>
            </li>
            <li>
              <a
                href="/docs/architecture"
                class="text-slate-400 hover:text-white transition"
                >Architecture</a>
            </li>
          </ul>
        </div>
        <div>
          <h4 class="text-white font-semibold mb-4">Guides</h4>
          <ul class="space-y-2 text-sm">
            <li>
              <a
                href="/docs/llm-providers"
                class="text-slate-400 hover:text-white transition"
                >LLM Providers</a>
            </li>
            <li>
              <a
                href="/docs/vector-databases"
                class="text-slate-400 hover:text-white transition"
                >Vector Databases</a>
            </li>
            <li>
              <a
                href="/docs/deployment"
                class="text-slate-400 hover:text-white transition"
                >Deployment</a>
            </li>
          </ul>
        </div>
        <div>
          <h4 class="text-white font-semibold mb-4">Community</h4>
          <ul class="space-y-2 text-sm">
            <li>
              <a
                href="https://github.com/princepal9120/ai-stack"
                class="text-slate-400 hover:text-white transition"
                target="_blank">GitHub</a>
            </li>
            <li>
              <a
                href="https://github.com/princepal9120/ai-stack/discussions"
                class="text-slate-400 hover:text-white transition"
                target="_blank">Discussions</a>
            </li>
            <li>
              <a
                href="https://github.com/princepal9120/ai-stack/blob/main/CONTRIBUTING.md"
                class="text-slate-400 hover:text-white transition"
                target="_blank">Contributing</a>
            </li>
          </ul>
        </div>
      </div>
      <div
        class="pt-8 border-t border-slate-800 text-center text-slate-500 text-sm"
      >
        MIT Â© AI Stack Team
      </div>
    </div>
  </footer>
</Layout>
