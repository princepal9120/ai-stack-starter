---
import Layout from "../layouts/Layout.astro";
import Header from "../components/common/Header.astro";
import { Icon } from "astro-icon/components";

const projects = [
  {
    name: "Enterprise RAG Platform",
    desc: "Internal knowledge base with 10M+ documents for a Fortune 500 company.",
    tags: ["OpenAI", "Qdrant", "K8s"],
    color: "bg-purple-500",
  },
  {
    name: "Legal Contract Analyst",
    desc: "AI-powered contract review system utilizing running Llama 3 locally for privacy.",
    tags: ["Ollama", "pgvector", "Docker"],
    color: "bg-emerald-500",
  },
  {
    name: "Medical Research Assistant",
    desc: "Multimodal analysis of medical journals and imaging using Gemini 1.5 Pro.",
    tags: ["Gemini", "Weaviate", "Cloud Run"],
    color: "bg-blue-500",
  },
  {
    name: "AI Code Reviewer",
    desc: "Automated PR review agent integrating with GitHub Actions and SonarQube.",
    tags: ["Anthropic", "Redis", "Vercel"],
    color: "bg-orange-500",
  },
  {
    name: "Customer Support Bot",
    desc: "Fine-tuned model for tier-1 support automation with human handoff.",
    tags: ["Fine-tuning", "LangChain", "AWS"],
    color: "bg-pink-500",
  },
];

const categories = [
  "All Projects",
  "Enterprise",
  "Open Source",
  "Healthcare",
  "DevTools",
];
---

<Layout title="Showcase - AI Stack">
  <Header activePath="/showcase" />

  <div
    class="pt-24 pb-20 px-4 min-h-screen max-w-7xl mx-auto flex flex-col lg:flex-row gap-12"
  >
    {/* Main Content */}
    <div class="flex-1">
      <div class="mb-12">
        <h1 class="text-4xl font-bold mb-4">
          Built with <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-400"
            >AI Stack</span
          >
        </h1>
        <p class="text-slate-400 text-lg">
          Discover production applications built by the community.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {
          projects.map((project) => (
            <div class="group relative rounded-2xl border border-slate-800 bg-slate-900/50 p-6 hover:border-purple-500/30 transition-all duration-300 hover:shadow-2xl hover:shadow-purple-500/10">
              <div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-blue-500/5 rounded-2xl opacity-0 group-hover:opacity-100 transition duration-500" />

              <div class="relative z-10">
                <div class="flex items-center gap-4 mb-4">
                  <div
                    class={`w-10 h-10 rounded-lg ${project.color} flex items-center justify-center shadow-lg`}
                  >
                    <Icon name="lucide:box" class="w-5 h-5 text-white/80" />
                  </div>
                  <h3 class="text-xl font-bold text-white">{project.name}</h3>
                </div>

                <p class="text-slate-400 mb-6 text-sm leading-relaxed">
                  {project.desc}
                </p>

                <div class="flex flex-wrap gap-2 mb-4">
                  {project.tags.map((tag) => (
                    <span class="px-2.5 py-1 rounded-md bg-slate-800/80 border border-slate-700/50 text-xs font-mono text-slate-300">
                      {tag}
                    </span>
                  ))}
                </div>

                <a
                  href="#"
                  class="inline-flex items-center gap-1 text-xs font-medium text-purple-400 hover:text-purple-300 transition-colors"
                >
                  View Source <Icon name="lucide:arrow-right" class="w-3 h-3" />
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    {/* Right Sidebar */}
    <aside class="w-full lg:w-72 shrink-0 space-y-8">
      {/* Submit Widget */}
      <div
        class="rounded-xl border border-slate-700/50 bg-gradient-to-br from-purple-900/20 to-slate-900/50 p-6 backdrop-blur-sm"
      >
        <h3 class="font-bold text-white mb-2">Build something?</h3>
        <p class="text-sm text-slate-400 mb-6">
          Submit your project to be featured in our showcase.
        </p>
        <a
          href="https://github.com/princepal9120/ai-stack/issues/new"
          target="_blank"
          class="flex items-center justify-center w-full gap-2 px-4 py-2 bg-white text-slate-900 rounded-lg font-semibold text-sm hover:bg-slate-200 transition-colors shadow-lg shadow-purple-500/10"
        >
          <Icon name="lucide:plus" class="w-4 h-4" />
          Submit Project
        </a>
      </div>

      {/* Categories / Filter Mock */}
      <div class="hidden lg:block">
        <h3
          class="font-semibold text-slate-200 text-sm uppercase tracking-wider mb-4 px-1"
        >
          Categories
        </h3>
        <nav class="space-y-1">
          {
            categories.map((cat, i) => (
              <button
                class:list={[
                  "w-full text-left px-3 py-2 rounded-lg text-sm transition-colors flex items-center justify-between group",
                  i === 0
                    ? "bg-purple-500/10 text-purple-400 font-medium"
                    : "text-slate-400 hover:text-slate-200 hover:bg-slate-800/50",
                ]}
              >
                {cat}
                <span
                  class:list={[
                    "text-xs",
                    i === 0
                      ? "text-purple-500"
                      : "text-slate-600 group-hover:text-slate-500",
                  ]}
                >
                  {i === 0 ? projects.length : Math.floor(Math.random() * 5)}
                </span>
              </button>
            ))
          }
        </nav>
      </div>

      {/* Newsletter or Community */}
      <div class="p-6 rounded-xl border border-slate-800 bg-slate-900/30">
        <h3 class="font-bold text-white mb-2 flex items-center gap-2">
          <Icon name="lucide:users" class="w-4 h-4 text-purple-400" />
          Community
        </h3>
        <p class="text-xs text-slate-400 mb-4">
          Join 5,000+ engineers building functionality not boilerplate.
        </p>
        <a
          href="https://discord.gg"
          class="text-sm text-purple-400 hover:text-purple-300 flex items-center gap-1 transition-colors"
        >
          Join Discord <Icon name="lucide:arrow-up-right" class="w-3 h-3" />
        </a>
      </div>
    </aside>
  </div>
</Layout>
