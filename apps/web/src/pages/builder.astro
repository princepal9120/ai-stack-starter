---
import Layout from "../layouts/Layout.astro";
import StackBuilder from "../components/StackBuilder";
---

<Layout title="Stack Builder - AI Stack">
  {/* Header */}
  <header
    class="fixed top-0 left-0 right-0 z-50 bg-slate-950/80 backdrop-blur-xl border-b border-slate-800"
  >
    <div class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
      <div class="flex items-center gap-8">
        <a href="/" class="flex items-center gap-2">
          <span
            class="text-xl font-bold bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent"
          >
            AI Stack
          </span>
        </a>
        <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
          <a href="/docs" class="text-slate-300 hover:text-white transition">
            Docs
          </a>
          <a href="/builder" class="text-purple-400 font-semibold">
            Builder
          </a>
          <a
            href="https://github.com/princepal9120/ai-stack"
            class="text-slate-300 hover:text-white transition"
            target="_blank"
          >
            GitHub
          </a>
        </nav>
      </div>
      <div class="flex items-center gap-4">
        <a
          href="/docs/quickstart"
          class="hidden md:flex items-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-500 text-white text-sm font-medium rounded-lg transition-colors"
        >
          Get Started
        </a>
      </div>
    </div>
  </header>

  <main class="pt-24 pb-20 px-4 min-h-screen bg-gradient-to-b from-slate-950 via-purple-950/10 to-slate-950">
    <div class="max-w-4xl mx-auto text-center mb-12">
      <h1 class="text-4xl font-bold text-white mb-4">
        Build Your <span class="bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent">AI Stack</span>
      </h1>
      <p class="text-lg text-slate-400">
        Choose your technologies and generate a CLI command to scaffold your project.
      </p>
    </div>

    <StackBuilder client:load />
  </main>

  {/* Footer */}
  <footer class="py-8 border-t border-slate-800">
    <div class="max-w-6xl mx-auto px-4 text-center text-slate-500 text-sm">
      <p>MIT Â© AI Stack Team</p>
    </div>
  </footer>
</Layout>
